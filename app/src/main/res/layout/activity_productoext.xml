<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/primary_text_dark"
        android:elevation="4dp"
        android:background="#009688"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        tools:context=".ProductoExtActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/customborder"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_flores"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:src="@drawable/flores" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="5dp"
                    android:text="@string/txt_ExGra"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|end"
                    android:paddingHorizontal="5dp"
                    android:layout_marginLeft="-230dp"
                    android:text="Color Beige"
                    android:textColor="@color/black"
                    android:textSize="15sp" >

                </TextView>
            </LinearLayout>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="72dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_marginLeft="-50dp"
                android:paddingHorizontal="10dp"
                android:src="@drawable/ic_baseline_add_shopping_cart_24"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck">
            </com.google.android.material.floatingactionbutton.FloatingActionButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/customborder"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_flores1"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:src="@drawable/real" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="5dp"
                    android:text="@string/txt_ExGra"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|end"
                    android:paddingHorizontal="5dp"
                    android:layout_marginLeft="-230dp"
                    android:text="Color Marron"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="72dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_marginLeft="-50dp"
                android:paddingHorizontal="10dp"
                android:src="@drawable/ic_baseline_add_shopping_cart_24"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck">

            </com.google.android.material.floatingactionbutton.FloatingActionButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/customborder"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_flores2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:src="@drawable/flamencos" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="5dp"
                    android:text="@string/txt_ExGra"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|end"
                    android:paddingHorizontal="5dp"
                    android:layout_marginLeft="-230dp"
                    android:text="Color Azul"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab3"
                android:layout_width="72dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_marginLeft="-50dp"
                android:paddingHorizontal="10dp"
                android:src="@drawable/ic_baseline_add_shopping_cart_24"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck">

            </com.google.android.material.floatingactionbutton.FloatingActionButton>

        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>